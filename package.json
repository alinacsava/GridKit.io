        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "prettier": "1.18.2",
        "pretty-quick": "^1.11.0",
        "webpack": "^4.34.0",
        "webpack-cli": "^3.3.4",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "cosmiconfig": "^5.2.1",
        "css-loader": "^3.0.0",
